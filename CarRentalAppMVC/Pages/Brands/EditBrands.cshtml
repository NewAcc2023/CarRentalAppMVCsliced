@model List<CarRentalAppMVC.Entities.Brand>

<div class="container">
	<table class="table table-striped table-dark mt-3 ">
		<tr>
			<th>Brand</th>
			<th>Edit Brand</th>
			<th>Delete Brand</th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.BrandName</td>
				<td><a type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#myModal_@item.Id">Edit</a></td>
				<td><a asp-action="DeleteBrand" asp-controller="Admin" asp-route-id=@item.Id class="btn btn-danger">delete</a></td>
			</tr>
			<div class="modal" id="myModal_@item.Id">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title">Modal title</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
								<span aria-hidden="true"></span>
							</button>
						</div>
						<form method="post" asp-action="UpdateBrand" asp-controller="Admin" asp-route-id=@item.Id>
							<div class="modal-body">
								<input name="name" value="@item.BrandName" />
							</div>
							<div class="modal-footer">
								<button type="submit" class="btn btn-primary">Save changes</button>
								<button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		}
	</table>
	<div class="text-center">
		<form method="post" asp-action="AddBrand" asp-controller="Admin">
			<label class="fs-5">New Brand Name</label>
			<input name="BrandName" required class="col-12 col-sm-6 col-md-3 col-lg-3 " />
			<button class="btn btn-warning col-12 col-sm-6 col-md-3 col-lg-3" type="submit">Add Brand</button>
		</form>
	</div>
</div>

