@model CarRentalAppMVC.Entities.Car

<div class="container">
	@if (TempData["message"] != null)
	{
		<div class="h4 m-1 fw-bold text-danger">@TempData["message"]</div>
	}
	<div class="card border-0">
		<div class="card-title mt-5">
			<!-- Title on the top center -->
			<h4 class="card-title text-center h4 p-0 fw-bold">@Model.Brand.BrandName @Model.ModelName</h4>
		</div>
		<div class="row g-1">
			<div class="col-lg-4">
				<!-- Image on the left -->
				<img src="/Images/@Model.ImagePath" class="img-fluid rounded  mx-0 mx-sm-0 mx-md-0 mx-lg-3 m-3 align-self-center" alt="Product Image">
			</div>
			<div class="col-lg-5 text-start h5 p-3">
				<div class="">
					<div class="row m-1">
						<div class="col">
							<div>Gear Box: @Model.GearBox.GearBoxName</div>
							<div>Engine Type: @Model.EngineType.EngineTypeName</div>
							<div>Engine Capacity: @Model.EngineCapacity</div>
						</div>
						<div class="col">
							<div>Drive Type: @Model.DriveType.DriveTypeName</div>
							<div>Seats: @Model.Seats</div>
							<div>Doors: @Model.Doors</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-lg-3">
				<!-- Price on the right -->
				<div class="card-body d-flex flex-column h-100">
					<div class="mt-auto h5 text-secondary h4 text-end">Starting price</div>
					<div class="text-end h3 fs-bold">@Model.Price $</div>
					<form asp-action="Order" asp-controller="Order" asp-route-carId="@Model.Id" asp-route-carPrice="@Model.Price">
						<h1 class="h5 mt-1">When to receive</h1>
							<input name="recieveDate" class="input-group fs-5 w-100" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")">
							<h1 class="h5 mt-2">When to return</h1>
							<input name="returnDate" class="input-group fs-5  w-100" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")">
						<input type="submit" class="btn btn-success text-center mt-3 fs-4 p-0 w-100" value="Order This Car" />
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
