@model CarRentalAppMVC.Models.AllCarsModel

<h4 class="text-center">Edit Room for Admins Only 😄</h4>
@foreach (var item in Model.Cars)
{
	<div class="container mt-4 ">
		<div class="row">
			<div class="col">
				<div class="card bg-secondary-subtle">
					<div class="card-title mt-2">
						<!-- Title on the top center -->
						<h4 class="card-title text-center h4 p-0 fw-bold">@item.Brand.BrandName @item.ModelName</h4>
					</div>
					<div class="row g-1">
						<div class="col-lg-3">
							<!-- Image on the left -->
							<img src="/Images/@item.ImagePath" class="img-fluid rounded box-shadow mx-0 mx-sm-0 mx-md-0 mx-lg-3 shadow-lg m-3 align-self-center" alt="Product Image">
						</div>
						<div class="col-lg-6 text-start h5 p-3">
							<div class="">
								<div class="row m-1">
									<div class="col">
										<div>Gear Box: @item.GearBox.GearBoxName </div>
										<div>Engine Type: @item.EngineType.EngineTypeName  </div>
										<div>Engine Capacity: @item.EngineCapacity </div>
									</div>
									<div class="col">
										<div>Drive Type: @item.DriveType.DriveTypeName </div>
										<div>Seats: @item.Seats  </div>
										<div>Doors: @item.Doors  </div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-lg-3">
							<!-- Price on the right -->
							<div class="card-body d-flex flex-column h-100 align-items-end">
								<div class="mt-auto h5 text-secondary h4 text-center">Starting price</div>
								<div class="text-center h3 fs-bold">@item.Price $</div>
								<a asp-action="FullEdit" asp-controller="Admin" asp-route-carId="@item.Id" class="btn btn-primary text-center p-1 m-1 fs-5">
									Full Edit
								</a>
								<a asp-action="UpdateCarPrice" asp-controller="Admin" asp-route-carId="@item.Id" class="btn btn-warning text-center p-1 m-1 fs-5" data-bs-toggle="modal" data-bs-target="#myModal_@item.Id">
									Edit Price
								</a>
								<a asp-action="DeleteCar" asp-controller="Admin" asp-route-carId="@item.Id" class="btn btn-danger text-center p-1 m-1 fs-5">
									Delete
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="modal" id="myModal_@item.Id">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Modal title</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
						<span aria-hidden="true"></span>
					</button>
				</div>
				<form method="post" asp-action="UpdateCarPrice" asp-controller="Admin" asp-route-id=@item.Id>
					<div class="modal-body">
						<input name="price" value="@item.Price" />
					</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-primary">Save changes</button>
					</div>
				</form>
			</div>
		</div>
	</div>
}