@model CarRentalAppMVC.Models.RegisterModel
@{
	ViewData["Title"] = "Register";
}

<div class="container text-center">
	<h1>Register</h1>

	<div class="row d-flex align-items-center justify-content-center">
		<div class="col-md-6">
			<form method="post">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label class="fs-4"  asp-for="Email"></label>
					<input asp-for="Email" class="form-control border-secondary" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label class="fs-4"  asp-for="Password"></label>
					<input asp-for="Password" class="form-control border-secondary" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label class="fs-4" asp-for="ConfirmPassword"></label>
					<input asp-for="ConfirmPassword" class="form-control border-secondary" />
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
				<button type="submit" class="btn btn-primary fs-5 mt-2">Register</button>
			</form>

		</div>
	</div>
</div>